<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/appitem_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/appitem_main"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="3dp">

        <RelativeLayout
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:orientation="vertical"
                android:gravity="center">
                
                <ImageView
                    android:id="@+id/appitem_appicon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/ic_app_dummy"/>
                
            </LinearLayout>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/outgoing_w"
                android:id="@+id/appitem_launchableic"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="app name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/appitem_appname"
                android:layout_marginRight="76dp"
                android:ellipsize="end"
                android:textColor="#ffffff"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                android:minLines="1"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:id="@+id/appitem_switch"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/appitem_more_root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#50CAD8E2"
        android:padding="5dp"
        android:tag="gone"
        android:minHeight="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/appitem_more_name"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/appitem_more_pkgname"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"/>

        <TextView
            android:text=" "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/appitem_more_version"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
        
        <Button
            android:id="@+id/appitem_btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="app info"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>


